<div class="flex justify-center text-color: black;">
  <div class="w-8/12 mb-3 mt-5" style="overflow-y: auto;">
    <h1 style="font-size: 32px; text-align: left;"><%= t('.title') %></h1>
    <div id="post-id-<%= @post.id %>" class="card card-side bg-base-100 shadow-xl" style="height: 430px; background-color: white;">
      <div class="card-body flex flex-row"> 
        <div class="content flex-1" style="flex: 1 1 65%; display: flex; flex-direction: column; justify-content: space-between; align-items: center; font-family: 'IBM Plex Sans JPu', sans-serif;">
          <div class="card-title" style="flex-grow: 1; display: flex; justify-content: center; font-size: 20px; color: black; width: 100%;">
            <%= simple_format(@post.lyricks) %>
          </div>
          <div>
            <ul class="list-inline" style="color: black;"> 
              <li class="list-inline-item"><%= @post.song_title %></li>
              <li class="list-inline-item">by <%= @post.artist %></li>
            </ul>
          </div>
        </div>

        <div class="spotify-embed" style="flex: 1 1 35%;"> 
          <% if @post.link_to_music.include?("spotify.com") %>
            <iframe src="https://open.spotify.com/embed/track/<%= @post.link_to_music.split("/").last %>"  width="100%" height="352px" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
          <% else %>
            <!-- 埋め込みがない場合のエリア -->
            <div style="min-height: 352px;"></div>
          <% end %>
          <div class="card-text text-right" style="padding-top: 20px; color: black;">
            <%= @post.user.name %>
          </div>
        </div>
      </div>
    </div>


    <% if user_signed_in? %>
      <div class="buttons-container mt-3" style="display: flex; gap: 10px; justify-content: flex-end;">
        <%= link_to t('defaults.edit'), edit_post_path(@post), class: 'btn btn-primary' %>
        <%= button_to t('defaults.delete'), post_path(@post), method: :delete, data: { confirm: t('are_you_sure') }, class: 'btn btn-secondary' %>
      </div>
    <% end %>
    <h2 class="text-xl font-semibold mb-4" style="margin-top: 40px;"><%= t('activerecord.models.comment') %></h2>
    <div>
      <% @comments.each do |comment| %>
        <%= render 'post_comments/comment', comment: comment, post: @post %>
      <% end %>
      <%= render 'post_comments/new_comment' %>
    </div>
  </div>
</div>
