<div class="container padding-top-custom">
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <%= render 'shared/new_post_button' %>
<% end %>
