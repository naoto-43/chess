<%= form_with model: post, local: true, data: { turbo: false }, class: "max-w-xl mx-auto py-10 px-5 bg-white shadow-lg rounded-lg" do |f| %>
  <%= render 'shared/error_messages', model: post %>

  <div class="mb-5">
    <%= f.label :lyricks, class: 'block text-gray-700 text-sm font-bold mb-2', style: 'font-size: 17px;' %>
    <%= f.text_area :lyricks, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', rows: 10 %>
  </div>

  <div class="mb-5">
    <%= f.label :song_title, class: 'block text-gray-700 text-sm font-bold mb-2', style: 'font-size: 17px;' %>
    <%= f.text_field :song_title, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="mb-5">
    <%= f.label :artist, class: 'block text-gray-700 text-sm font-bold mb-2', style: 'font-size: 17px;' %>
    <%= f.text_field :artist, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="mb-5">
    <%= f.label :link_to_music, class: 'block text-gray-700 text-sm font-bold mb-2', style: 'font-size: 17px;' %>
    <%= f.text_field :link_to_music, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', id: 'link_to_music' %>
  </div>

  <div class="flex justify-center">
    <div id="spotify-embed-container" class="w-full max-w-xl"></div>
  </div>
  <br>

  <%= f.submit t('defaults.update'), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
<% end %>


