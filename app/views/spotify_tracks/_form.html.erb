<h2><%= "アーティスト（最大５つ）" %></h2>
<%= form_with url: search_artists_path, id: "artist_search_form", method: :get, local: true, data: { controller: "form", action: "submit->form#submit", sp_tracks_path: spotify_tracks_path } do |form| %>
  <div class="flex flex-wrap gap-4"> 
    <% 5.times do |index| %>
      <div class="flex items-center space-x-2"> 
        <%= form.text_field :artist_query, id: "artist_query_#{index}", name: "artist_query[#{index}]", autocomplete: "off", class: "form-input", data: { action: "input->form#search", index: index } %>
        <div id="artists_<%= index %>" turbo-frame="artists_<%= index %>">
          <!-- 検索結果がここに表示されます -->
        </div>
      </div>
      <div class="flex items-center space-x-2"> 
        <%= form.text_field :track_query, id: "track_query_#{index}", name: "track_query[#{index}]", autocomplete: "off", class: "form-input", data: {
        action: "input->form#search", index: index } %>
        <div id="tracks_<%= index %>" turbo-frame="tracks_<%= index %>">
          <!-- 検索結果がここに表示されます -->
        </div>
      </div>
    <% end %>
  </div>
  <%= form.submit t('defaults.search'), class: 'mt-4 px-4 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-700' %>
<% end %>
