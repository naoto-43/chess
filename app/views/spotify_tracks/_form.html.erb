<%= form_with model: spotify_track, local: true, data: { turbo: false } do |f| %>
  <%= render 'shared/error_messages', model: spotify_track %>
  <div class="form-group">
    <%= f.label :lyricks %>
    <%= f.text_area :lyricks, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :song_title %>
    <%= f.text_field :song_title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :artist %>
    <%= f.text_field :artist, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :link_to_music %>
    <%= f.text_field :link_to_music, class: 'form-control', id: 'link_to_music' %>
  </div>
  <div id="spotify-embed-container"></div>
  <div class="form-group">
    <%= f.label :design %>
    <div class="radio-options">
      <%= f.radio_button :design, 'red', id: 'Red', class: 'design-option' %>
      <%= f.label :design, 'red', class: 'design-label', for: 'Red', style: "background-color: #ff5151;" %>
      <%= f.radio_button :design, 'blue', id: 'Blue', class: 'design-option' %>
      <%= f.label :design, 'blue', class: 'design-label', for: 'Blue', style: "background-color: #5177ff;" %>
      <%= f.radio_button :design, 'yellow', id: 'Yellow', class: 'design-option' %>
      <%= f.label :design, 'yellow', class: 'design-label', for: 'Yellow', style: "background-color: #ffff51;" %>
      <%= f.radio_button :design, 'green', id: 'Green', class: 'design-option' %>
      <%= f.label :design, 'green', class: 'design-label', for: 'Green', style: "background-color: #51ff82;" %>
    </div>
  </div>
  <br>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
